generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Sinistro {
  id           String   @id @default(uuid())
  clienteId    String
  tipo         String   // Ex: "ROUBO", "COLISAO"
  status       String   @default("ABERTO") // Ex: "ABERTO", "EM_ANALISE"
  descricao    String
  dataOcorrido DateTime

  criadoEm     DateTime @default(now())
  atualizadoEm DateTime @updatedAt

  @@map("sinistros") // Nome da tabela no banco
}